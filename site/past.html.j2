{% extends "templates/base.html" %}
{% from "templates/macros.html.j2" import show_event %}

{% block title %}
DoEPy - Past Events
{% endblock %}

{% block content %}
  <section id="pastEvents" class="mt-3 d-flex flex-column align-items-center">
    <h1>Past Python Exchanges</h1>
    {% for event in past_events %}
      {{ show_event(event, i=((past_events | length) - loop.index0)) }}
    {% endfor %}
  </section>
{% endblock %}
